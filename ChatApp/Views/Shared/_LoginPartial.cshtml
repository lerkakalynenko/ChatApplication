@using Microsoft.AspNetCore.Identity
@using ChatApp.DAL.Entities
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
    
        <li class="nav-item">
           <strong><a asp-action="Logout" asp-controller="Account" class="nav-link btn btn-link text-dark">Logout</a> </strong> 
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>