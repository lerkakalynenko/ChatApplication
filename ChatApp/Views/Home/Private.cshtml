@using ChatApp.BLL.Infrastructure
@model IEnumerable<ChatApp.DAL.Entities.Chat>
@{
    ViewData["Title"] = "Home Page";
    var userId = User.GetUserId();
}

<div class="chat-body">
    @foreach (var chat in Model)
    {
    <a class="room-button" asp-controller="Home" asp-action="Chat" asp-route-id="@chat.Id">
        @chat.Users.FirstOrDefault(r=>r.UserId != userId).AppUser.UserName
    </a>
    }
</div>
